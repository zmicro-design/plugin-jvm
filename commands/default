#!/bin/bash

help() {
  echo "Set default version"
  echo ""
  echo "Usage:"
  echo "  jvm default"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  local version="$1"
  if [ -z "$version" ]; then
    log::error "[$(timestamp)] version is required"
    return 1
  fi

  jvm::default "$version"
}

run() {
  core "$@"
}

run "$@"
